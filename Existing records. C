#include <stdio.h>

int main() {
    int arr[100], n, i, newItem;

    printf("Enter number of existing records: ");
    scanf("%d", &n);

    // Input existing records
    for (i = 0; i < n; i++) {
        printf("Enter record %d: ", i + 1);
        scanf("%d", &arr[i]);
    }

    // Add new record
    printf("Enter new record to add: ");
    scanf("%d", &newItem);

    arr[n] = newItem; // add at next position
    n++;              // increase count

    // Display updated list
    printf("\nUpdated Records:\n");
    for (i = 0; i < n; i++) {
        printf("%d ", arr[i]);
    }

    return 0;
}
