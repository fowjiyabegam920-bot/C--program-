#include <stdio.h>
#include <string.h>

// Structure definition
struct Item {
    int id;
    char name[20];
    float price;
};

int main() {
    struct Item items[50];
    int n = 0, choice, i, searchId, found;

    do {
        printf("\n--- Inventory Management System ---\n");
        printf("1. Add Item\n");
        printf("2. Display Items\n");
        printf("3. Search Item by ID\n");
        printf("4. Update Item by ID\n");
        printf("5. Exit\n");
        printf("Enter your choice: ");
        scanf("%d", &choice);

        switch (choice) {

        case 1:   // Add item
            printf("Enter Item ID: ");
            scanf("%d", &items[n].id);

            printf("Enter Item Name: ");
            scanf("%s", items[n].name);

            printf("Enter Item Price: ");
            scanf("%f", &items[n].price);

            n++;
            printf("Item added successfully.\n");
            break;

        case 2:   // Display items
            if (n == 0) {
                printf("No items to display.\n");
            } else {
                printf("\n--- Item List ---\n");
                for (i = 0; i < n; i++) {
                    printf("ID: %d  Name: %s  Price: %.2f\n",
                           items[i].id, items[i].name, items[i].price);
                }
            }
            break;

        case 3:   // Search item
            printf("Enter Item ID to search: ");
            scanf("%d", &searchId);
            found = 0;

            for (i = 0; i < n; i++) {
                if (items[i].id == searchId) {
                    printf("Item Found!\n");
                    printf("ID: %d\nName: %s\nPrice: %.2f\n",
                           items[i].id, items[i].name, items[i].price);
                    found = 1;
                    break;
                }
            }
            if (!found) {
                printf("Item not found.\n");
            }
            break;

        case 4:   // Update item
            printf("Enter Item ID to update: ");
            scanf("%d", &searchId);
            found = 0;

            for (i = 0; i < n; i++) {
                if (items[i].id == searchId) {
                    printf("Enter new Name: ");
                    scanf("%s", items[i].name);

                    printf("Enter new Price: ");
                    scanf("%f", &items[i].price);

                    printf("Item updated successfully.\n");
                    found = 1;
                    break;
                }
            }
            if (!found) {
                printf("Item not found.\n");
            }
            break;

        case 5:
            printf("Exiting program.\n");
            break;

        default:
            printf("Invalid choice.\n");
        }

    } while (choice != 5);

    return 0;
}
