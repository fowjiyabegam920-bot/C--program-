#include <stdio.h>

// Structure definition
struct Patient {
    int patientId;
    char name[20];
    int age;
};

int main() {
    struct Patient p;

    printf("Enter Patient ID: ");
    scanf("%d", &p.patientId);

    printf("Enter Patient Name: ");
    scanf("%s", p.name);

    printf("Enter Age: ");
    scanf("%d", &p.age);

    printf("\n--- Patient Details ---\n");
    printf("Patient ID : %d\n", p.patientId);
    printf("Name       : %s\n", p.name);
    printf("Age        : %d\n", p.age);

    return 0;
}
