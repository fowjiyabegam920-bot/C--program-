#include <stdio.h>
#include <string.h>

int main() {
    char password[100];
    int i, length;
    int hasUpper = 0, hasLower = 0, hasDigit = 0;

    printf("Enter password: ");
    scanf("%s", password);

    length = strlen(password);

    if (length < 8) {
        printf("Invalid\n");
        return 0;
    }

    for (i = 0; i < length; i++) {
        if (password[i] >= 'A' && password[i] <= 'Z')
            hasUpper = 1;
        else if (password[i] >= 'a' && password[i] <= 'z')
            hasLower = 1;
        else if (password[i] >= '0' && password[i] <= '9')
            hasDigit = 1;
    }

    if (hasUpper && hasLower && hasDigit)
        printf("Valid\n");
    else
        printf("Invalid\n");

    return 0;
}
