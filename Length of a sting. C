#include <stdio.h>

int main() {
    char str[100];
    int i, length = 0;

    printf("Enter a string: ");
    fgets(str, sizeof(str), stdin); // Read string including spaces

    // Count characters until null character
    for (i = 0; str[i] != '\0'; i++) {
        if (str[i] != '\n') // Ignore newline character
            length++;
    }

    printf("Length of the string: %d\n", length);

    return 0;
}
