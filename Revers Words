#include <stdio.h>
#include <string.h>

int main() {
    char sentence[200];
    int i, len;

    printf("Enter a sentence: ");
    fgets(sentence, sizeof(sentence), stdin);

    len = strlen(sentence);

    if (sentence[len - 1] == '\n') {
        sentence[len - 1] = '\0';
        len--;
    }

    printf("Reversed sentence: ");
    for (i = len - 1; i >= 0; i--) {
        printf("%c", sentence[i]);
    }

    return 0;
}
