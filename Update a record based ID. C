#include <stdio.h>

// Structure definition
struct Student {
    int id;
    char name[20];
    float marks;
};

int main() {
    int n, i, updateId, found = 0;

    printf("Enter number of students: ");
    scanf("%d", &n);

    struct Student s[n];

    // Input student details
    for (i = 0; i < n; i++) {
        printf("\nEnter details of student %d\n", i + 1);

        printf("Enter ID: ");
        scanf("%d", &s[i].id);

        printf("Enter Name: ");
        scanf("%s", s[i].name);

        printf("Enter Marks: ");
        scanf("%f", &s[i].marks);
    }

    // ID to update
    printf("\nEnter ID to update: ");
    scanf("%d", &updateId);

    for (i = 0; i < n; i++) {
        if (s[i].id == updateId) {
            printf("\nEnter new Name: ");
            scanf("%s", s[i].name);

            printf("Enter new Marks: ");
            scanf("%f", &s[i].marks);

            printf("\nRecord Updated Successfully!\n");
            printf("Updated Record:\n");
            printf("ID    : %d\n", s[i].id);
            printf("Name  : %s\n", s[i].name);
            printf("Marks : %.2f\n", s[i].marks);

            found = 1;
            break;
        }
    }

    if (!found) {
        printf("\nRecord not found.\n");
    }

    return 0;
}
